<div>
<div> <a href="/start_new_summary">+ Add New Summary</a> </div>
<hr>
  <div>
    <h1>
      My Library
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Url
        </th>

        <th>
          Summary
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_pdfs.each do |a_pdf| %>
      <tr>
        <td>
          <%= a_pdf.id %>
        </td>

        <td>
          <%= a_pdf.title %>
        </td>

        <td>
          <%= a_pdf.url %>
        </td>

        <td>
          <%= a_pdf.summary %>
        </td>

        <td>
          <%= time_ago_in_words(a_pdf.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pdf.updated_at) %> ago
        </td>

        <td>
          <a href="/pdfs/<%= a_pdf.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
