<div>
  <div>
    <h1>
      List of all pdf tags
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new pdf tag
    </h2>

    <form action="/insert_pdf_tag" method="post">
      <div>
        <label for="pdf_id_box">
          Pdf
        </label>

        <input type="text" id="pdf_id_box" name="query_pdf_id">
      </div>

      <div>
        <label for="tag_id_box">
          Tag
        </label>

        <input type="text" id="tag_id_box" name="query_tag_id">
      </div>

      <button>
        Create pdf tag
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Pdf
        </th>

        <th>
          Tag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_pdf_tags.each do |a_pdf_tag| %>
      <tr>
        <td>
          <%= a_pdf_tag.id %>
        </td>

        <td>
          <%= a_pdf_tag.pdf_id %>
        </td>

        <td>
          <%= a_pdf_tag.tag_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_pdf_tag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pdf_tag.updated_at) %> ago
        </td>

        <td>
          <a href="/pdf_tags/<%= a_pdf_tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
