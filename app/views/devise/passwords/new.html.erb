<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="container p-3 login-box" style="max-width: 400px;">    
    <h2 class="text-center mb-4">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'form-control', style: "margin-bottom: 15px;"  } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-outline-dark btn-block w-100' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
